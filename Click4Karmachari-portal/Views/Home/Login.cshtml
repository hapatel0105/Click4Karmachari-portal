    <style>
        body {
            background-image: url('../../content/assets/images/login/login_bg.jpg');
        }

        section .container .user .imgBx {
            position: relative;
            width: 52%;
            height: 100%;
            transition: 0.5s;
            background-size: cover;
        }

        section .container .user .imgBx1 {
            position: relative;
            width: 30%;
            height: 100%;
            transition: 0.5s;
            background-size: cover;
        }
        section .container.active .signupBx .imgBx1 {
            left: 5%;
        }
        section .container.active .signupBx .formBx {
            left: 2%;
        }

        section .container .user .imgBx .imgBx1 img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        section .container {
            margin-top:100px;
            position: relative;
            width: 950px;
            height: 500px;
            background: #fff;
            overflow: hidden;
            /* border-radius: 20px; */
        }
