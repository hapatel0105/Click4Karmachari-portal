<body>
    <section>
        <div style="background-image:url('~/Content/assets/images/login/login_bg.jpg')"></div>
        <div class="container">
            <div class="user signinBx">
                <div class="imgBx"><img src="~/Content/assets/images/gif/gif1.gif" /></div>
                <div class="formBx signin" style="background-color:white;">
                    <form class="theme-form">
                        <h3>Sign in to portal</h3>
                        <div class="form-group">
                            <label class="col-form-label">Email Address</label>
                            <input class="form-control" type="email" required="" placeholder="abc123@gmail.com">
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Password</label>
                            <div class="form-input position-relative">
                                <input class="form-control" type="password" name="login[password]" required="" placeholder="*********">
                                <div class="show-hide"><span class="show">                         </span></div>
                            </div>
                        </div>
                        <div class="form-group mb-0">
                            <div class="checkbox p-0">
                                <input id="checkbox1" type="checkbox" class="ms-0">
                                <label class="text-muted" for="checkbox1">Remember password</label>
                            </div><a class="link" href="forget-password.html">Forgot password?</a>
                            <div class="text-end mt-3">
                                <button class="btn btn-primary btn-block w-100" type="submit">Sign in</button>
                            </div>
                        </div>
                        <h6 class="text-muted mt-4 or">Or Sign in with</h6>
                        <div class="social mt-4">
                            <div class="a2a_kit a2a_kit_size_32 a2a_default_style justify-content-evenly d-flex">
                                <a class="a2a_button_google_gmail"></a>
                                <a class="a2a_button_facebook"></a>
                                <a class="a2a_button_linkedin"></a>
                                <a class="a2a_button_x"></a>
                            </div>
                        </div>
                        <p class="mt-4 mb-0 text-center">Don't have account?<a class="ms-2" id="login" style="text-decoration: none;" href="#" onclick="toggleForm();">Create Account</a></p>
                    </form>
                </div>
            </div>
            <div class="user signupBx">
                <div class="formBx" style="background-color:white;">
                    <form class="theme-form" style="padding: 50px 50px 50px 50px" onsubmit="return false;">
                        <h4 style="margin-left:-9px; margin-bottom:20px;">Register your company</h4>     
                        <div class="form-group">
                            <div class="row">
                                <div class="col-6">
                                    <label class="col-form-label pt-0">Company Name</label>
                                    <input class="form-control" type="text" required="" placeholder="Company name">
                                </div>
                                <div class="col-6">
                                    <label class="col-form-label pt-0">Administrator Name</label>
                                    <input class="form-control" type="text" required="" placeholder="Administrator">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-6">
                                    <label class="col-form-label pt-0">Company Email</label>
                                    <input class="form-control" type="email" required="" placeholder="Comapny Email">
                                </div>
                                <div class="col-6">
                                    <label class="col-form-label pt-0">Mobile Number</label>
                                    <input class="form-control" type="text" required="" placeholder="Mobile Number">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-6">
                                    <label class="col-form-label pt-0">Password</label>
                                    <input class="form-control" type="password" required="" placeholder="Password">
                                </div>
                                <div class="col-6">
                                    <label class="col-form-label pt-0">Comapany Address</label>
                                    <input class="form-control" type="text" required="" placeholder="Company Address">
                                </div>
                            </div>
                        </div>
                        <div class="form-group mb-0">
                            <div class="checkbox p-0">
                                <input id="checkbox1" type="checkbox" class="ms-0">
                                <label class="text-muted" for="checkbox1">Agree with<a class="ms-2" href="#">Privacy Policy</a></label>
                            </div>
                            <button class="btn btn-primary btn-block w-100" type="submit">Create Account</button>
                        </div>
                        <h6 class="text-muted mt-4 or">Or signup with</h6>
                        <div class="social mt-4 ms-3">
                            <div class="a2a_kit a2a_kit_size_32 a2a_default_style justify-content-evenly d-flex">
                                <a class="a2a_button_google_gmail"></a>
                                <a class="a2a_button_facebook"></a>
                                <a class="a2a_button_linkedin"></a>
                                <a class="a2a_button_x"></a>
                            </div>
                        </div>
                        <p class="mt-4 mb-0">Already have an account?<a class="ms-2" id="login" style="text-decoration: none;" href="#" onclick="toggleForm();">Sign in</a></p>
                    </form>
                </div>
                <div class="imgBx1"><img src="~/Content/assets/images/gif/gif.gif" /></div>
            </div>
        </div>
    </section>

