        $.ajax({
            type: "POST",
            url: "/Employee/GetReq?Req_No=" + Req_No,
            data: "{}",
            success: function (data) {
                var pGranted_Amount = data.Granted_Amount;
                document.getElementById("Granted_Amount").value = pGranted_Amount;
            },
            error: function (errormessage) {
                //alert("error...");
                //alert(errormessage);
            }
        });
    }
