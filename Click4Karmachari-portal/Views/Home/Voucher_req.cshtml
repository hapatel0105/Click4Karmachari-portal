<script type="text/javascript">
    function getparent() {
        var Parent_Type = document.getElementById('Parent_Type').value;
        if (Parent_Type == "Opportunity") {
            document.getElementById("demo").hidden = true;
        }
        else {
            document.getElementById("demo").hidden = false;
        }
    }
    var isSubmitted = false;

    function stopMultipleSubmitAdvReq() {
        if (!isSubmitted) {
            $("#savebtn").prop('disabled', true);
            isSubmitted = true;
            return true;
        }
        else {
            $("#savebtn").prop('disabled', false);
            isSubmitted = false;
            return false;
        }
    }
    function submitadvreq() {

        stopMultipleSubmitAdvReq();

        return isSubmitted;
    }
    function myfunctionVoucher() {

        document.getElementById("request").style.display = "none";
        $("#Model_Emp_AdvanceReq").modal('show');

        document.getElementById("exit").style.display = "block";
        $("#Model_Emp_AdvanceReq").modal('hide');
    }
    function getparent() {
        var Parent_Type = document.getElementById('Parent_Type').value;

        if (Parent_Type == "Opportunity") {
            document.getElementById("demo").hidden = true;
        }
        else {
            document.getElementById("demo").hidden = false;
        }
    }

    function sub() {
        var Deduction_Amount = document.getElementById('Deduction_Amount').value;
        if (Deduction_Amount == null || Deduction_Amount == "" || Deduction_Amount == 0) {
            document.getElementById('Deduction_Amount').value = 0;
            var Final_Amt = document.getElementById('Total_Amount').value;
            document.getElementById('Payable_Amount').value = Final_Amt;
        }
        var Total_Amount = document.getElementById('Total_Amount').value;
        var Payable_Amount = parseInt(Total_Amount) - parseInt(Deduction_Amount);


        var Grant_Amt = document.getElementById('Granted_Amount').value;

        if (Grant_Amt == null || Grant_Amt == "") {
            Grant_Amt = 0;
        }
        if (Grant_Amt > Payable_Amount) {
            var Final_Amt = Grant_Amt - Payable_Amount;
            document.getElementById('Payable_Amount').value = "-" + Final_Amt;
            document.getElementById('Trans_Type').value = 2;
            document.getElementById('Trans_Type_Name').value = "Debit";

        }
        if (Grant_Amt < Payable_Amount) {
            var Final_Amt = Payable_Amount - Grant_Amt;
            document.getElementById('Payable_Amount').value = "+" + Final_Amt;
            document.getElementById('Trans_Type').value = 1;
            document.getElementById('Trans_Type_Name').value = "Credit";

        }
        if (Grant_Amt == Total_Amount) {

            document.getElementById('Payable_Amount').value = 0;
        }
    }

    function sum() {

        var Petrol = document.getElementById('Petrol').value;

        if (Petrol == null || Petrol == "") {
            Petrol = 0;
        }
        var Mobile = document.getElementById('Mobile').value;
        if (Mobile == null || Mobile == "") {
            Mobile = 0;
        }
        var Travelling = document.getElementById('Travelling').value;
        if (Travelling == null || Travelling == "") {
            Travelling = 0;
        }
        var Conveyance = document.getElementById('Conveyance').value;
        if (Conveyance == null || Conveyance == "") {
            Conveyance = 0;
        }

        var Total_Amount = parseInt(Petrol) + parseInt(Mobile) + parseInt(Travelling) + parseInt(Conveyance);
        document.getElementById('Total_Amount').value = Total_Amount;

        var Deduction_Amount = document.getElementById('Deduction_Amount').value;
        if (Deduction_Amount == null || Deduction_Amount == "" || Deduction_Amount == 0) {
            document.getElementById('Deduction_Amount').value = 0;
            var Final_Amt = document.getElementById('Total_Amount').value;
            document.getElementById('Payable_Amount').value = Final_Amt;
        }
        var Total_Amount = document.getElementById('Total_Amount').value;
        var Payable_Amount = parseInt(Total_Amount) - parseInt(Deduction_Amount);


        var Grant_Amt = document.getElementById('Granted_Amount').value;
        if (Grant_Amt == null || Grant_Amt == "") {
            Grant_Amt = 0;
        }
        if (Grant_Amt > Payable_Amount) {
            var Final_Amt = Grant_Amt - Payable_Amount;
            document.getElementById('Payable_Amount').value = "-" + Final_Amt;
            document.getElementById('Trans_Type').value = 2;
            document.getElementById('Trans_Type_Name').value = "Debit";
        }
        if (Grant_Amt < Payable_Amount) {
            var Final_Amt = Payable_Amount - Grant_Amt;
            document.getElementById('Payable_Amount').value = "+" + Final_Amt;
            document.getElementById('Trans_Type').value = 1;
            document.getElementById('Trans_Type_Name').value = "Credit";
        }
        if (Grant_Amt == Total_Amount) {

            document.getElementById('Payable_Amount').value = 0;
        }
    }
    function getPlace() {
